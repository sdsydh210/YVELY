<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Broadcast.LiveListListviewitem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/broadcastingImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_livelist"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/broadcasterId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/broadcastingImage"
            android:layout_alignStart="@+id/broadcastingTitle"
            android:text="BroadcasterId"
            android:textColor="#000000"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/broadcastingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/broadcastingImage"
            android:layout_marginStart="81dp"
            android:text="BroadcastTitle"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/broadcastingStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="broadcastingStartTime"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

</LinearLayout>